                </EditText>

                <EditText
                    android:id="@+id/edtLastName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Last" android:inputType="textCapWords">
                </EditText>
            </LinearLayout>

            <LinearLayout

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- item name="android:windowTranslucentStatus">true</item -->
        <!-- customize the color palette -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/app_primary_color</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/app_primary_dark_color</item>
        <!-- colorAccent is used as the default value for colorControlActivated
                which is used to tint widgets -->
        <item name="colorAccent">@color/app_accent_color</item>
        <!-- Can also set colorControlNormal, colorControlActivated
               colorControlHighlight & colorSwitchThumbNormal. -->
        <item name="drawerArrowStyle">@style/PatinaDrawerArrowToggle</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="stickyListHeadersListViewStyle">@style/WidgetStickyListView</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">

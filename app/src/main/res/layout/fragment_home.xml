<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@color/login_back_color" tools:context="com.anstar.fieldwork.HomeFragment">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:paddingTop="16dp" android:paddingBottom="16dp"
        android:paddingLeft="13dp" android:background="#292929" android:paddingRight="16dp"
        android:id="@+id/relative_layut_2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" android:src="@drawable/ic_appointments_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointments"
            android:id="@+id/textView8"
            android:layout_marginLeft="13dp" android:layout_marginStart="13dp" android:gravity="center_vertical"
            android:layout_alignBottom="@+id/imageView2" android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" android:textColor="#fff" android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:id="@+id/textView9"
            android:layout_alignTop="@+id/textView8" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:textColor="#fff" android:textSize="18dp"/>
    </RelativeLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/relative_layut_2"
        android:layout_alignParentStart="true" />

</RelativeLayout>

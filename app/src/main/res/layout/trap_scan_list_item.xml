<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main_list_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listselector" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@+id/imgNext"
        android:padding="10dip" >

        <TextView
            android:id="@+id/txtTrapId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/main_item_text"
            android:text="ID# 100"
            android:textSize="16dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="BARCODE NUMBER"
            android:textColor="#A0A0A0"
            android:textSize="16dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTrapLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTrapId"
            android:layout_marginTop="5dip"
            android:text="Location Name" />

        <TextView
            android:id="@+id/txtFreqvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/txtTrapLocation"
            android:layout_marginTop="5dip"
            android:text="Freqency value"
            android:textColor="#A0A0A0" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/ic_right_arrow"
        android:visibility="visible" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anstar.fieldwork.AppointmentDetails2Fragment">

    <se.emilsjolander.stickylistheaders.ExpandableStickyListHeadersListView
        android:id="@+id/lstAppointments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#F7F7F7"
        android:dividerHeight="1dp"
        android:listSelector="#00000000"
        android:layout_above="@+id/relativeLayout13" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout13">

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_media_play"
            android:theme="@style/ButtonAccentTintedStyle"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00:00"
            android:id="@+id/textView60"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/login_back_color" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:id="@+id/linearLayout" android:gravity="center"
        android:background="#e74c3a">
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo_fieldwork" android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp" android:background="@drawable/logo_fieldwork"/>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp" android:layout_below="@+id/linearLayout" android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp" android:layout_marginRight="16dp">

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/username_hint"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="18dip" >
        </EditText>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtUsername"
            android:layout_marginTop="20dip"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="18dip" />
        
    </RelativeLayout>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in" android:background="@drawable/custion_bag_login"
        android:paddingTop="10dp" android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#3c4248" android:paddingLeft="40dp" android:paddingRight="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/button3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#3c4248" android:background="@drawable/custion_bag_login" android:paddingLeft="35dp"
        android:paddingTop="10dp" android:paddingRight="35dp" android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/rlMain"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fogot password?"
        android:id="@+id/textView7" android:layout_below="@+id/rlMain" android:layout_alignRight="@+id/rlMain"
        android:layout_marginTop="20dp" android:textColor="#3c4248" android:textSize="18dp"/>

</RelativeLayout>
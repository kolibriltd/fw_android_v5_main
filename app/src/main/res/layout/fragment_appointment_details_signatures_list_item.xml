<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentTop="true"
    android:fillViewport="true"
    android:padding="5dip">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llSign"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/rlCustomerSignCanvas"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView19"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:hint="Tap to add" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llCustomerSignCanvas"
                android:layout_width="fill_parent"
                android:layout_height="150dip"
                android:layout_span="2"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:visibility="gone"></LinearLayout>

            <TextView
                android:id="@+id/txtDivider"
                style="@style/divider_light"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_above="@+id/rlInfo" />

            <RelativeLayout
                android:id="@+id/rlInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dip">

                <TextView
                    android:id="@+id/txtSignatureType"
                    style="@style/dark_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Signature" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnClearCustomerSign"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Capture Signature"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/app_accent_color"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/rlTechnitianSignCanvas"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView20"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:hint="Tap to add" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llTechnitianSignCanvas"
                android:layout_width="fill_parent"
                android:layout_height="150dip"
                android:layout_span="2"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:visibility="gone"></LinearLayout>

            <TextView
                android:id="@+id/txtDivider1"
                style="@style/divider_light"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_above="@+id/rlInfo1" />

            <RelativeLayout
                android:id="@+id/rlInfo1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dip">

                <TextView
                    android:id="@+id/txtSignatureType1"
                    style="@style/dark_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Technician Signature" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnClearTechnicianSign"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Capture Signature"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/app_accent_color"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

